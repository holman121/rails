<p id="notice"><%= notice %></p>

<div class="row mx-5">

 <div class="col-10">
   <h4>Orders </h4>
 </div>

  <div class="col-2">
    <p class="btn btn-outline-info btn-sm"><%= link_to 'New Order', new_order_path %></p>
  </div>

<table class="table table-hover mx-auto">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.title %></td>
        <td><%= order.description %></td>
        <td><%= order.price %></td>
        <td><%= order.quantity %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
